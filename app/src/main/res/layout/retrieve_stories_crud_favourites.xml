<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="72dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context='com.jbapplab.navigationdrawertabs.MyFavouritesActivity'
    tools:showIn="@layout/activity_my_favourites">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayoutRetrieveFavouritesStoriesCRUD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewRetrieveFavouritesStoriesCRUD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>