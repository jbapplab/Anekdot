<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.jbapplab.navigationdrawertabs.MetaFirstActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvWelcomeMessageMetaFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="It is time to create a story. Lets think of the intended audience first."/>

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To begin with select the topic in which your story fits. This will give you some specific suggestions later on."/>

        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvStage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Now briefly think of the problem or issue your story is based on. In which stage is your intended audience in regard to the issue?"/>

        <Spinner
            android:id="@+id/stageSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"/>

        <TextView
            android:id="@+id/tvSwipeRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="According to your selections so far tailored suggestions have been generated for you. You can swipe right and get extra information on how to make your story more persuasive in terms of the topic and stage that your audience is in."/>

        <com.emmasuzuki.easyform.EasyForm
            android:id="@+id/meta_first_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:showErrorOn="unfocus">

            <TextView
                android:id="@+id/tvStageRelated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/meta_first_form"
                android:text="Think about the your audience in relation to the story. How can you make the story more specific to them? Swipe right for more tips."/>

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/stageRelated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStageRelated"
                android:layout_marginTop="8dp"
                android:hint="What is your goal with this story? What do you want your audience to do?"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/contextRelated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stageRelated"
                android:layout_marginTop="8dp"
                android:hint="Think about the environment of your story. The time, setting, actors; are they relatable to your intended audience? Swipe right for more tips."
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/storyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contextRelated"
                android:layout_marginTop="8dp"
                android:hint="Give the title of your story."
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/ifOtherSpecify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/storyTitle"
                android:layout_marginTop="8dp"
                android:hint="If 'Other' was selected please give a suggested category or give an extra keyword for your topic." />

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/storyDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ifOtherSpecify"
                android:layout_marginTop="8dp"
                android:hint="Give a short description for your story."
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/orientation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/storyDescription"
                android:layout_marginTop="8dp"
                android:hint="Set the setting or context of your story."
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/complicatedAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/orientation"
                android:layout_marginTop="8dp"
                android:hint="Describe an issue or problem. What happens in the story?"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/evaluation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/complicatedAction"
                android:layout_marginTop="8dp"
                android:hint="Explain why this is important/exciting or the reason for sharing it."
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/resolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/evaluation"
                android:layout_marginTop="8dp"
                android:hint="Describe what happened in the end. Was there something unexpected?"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/messgage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/resolution"
                android:layout_marginTop="8dp"
                android:hint="Leave your audience with the meaning or significance of what happened. How did this experience change the actors?"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>


            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/imageUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/messgage"
                android:layout_marginTop="8dp"
                android:hint="Enter a URL of a photo that represents your story."
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>

            <Button
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:id="@+id/addButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageUrl"
                android:layout_marginTop="20dp"
                android:background="@color/colorAccent"
                android:text="Save Story"
                android:textColor="@android:color/white"
                android:enabled="false"
                android:alpha="0"/>

            <Button
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:id="@+id/updateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageUrl"
                android:layout_marginTop="20dp"
                android:text="Update Story"
                android:textColor="@android:color/white"
                android:enabled="false"
                android:alpha="0"/>

        </com.emmasuzuki.easyform.EasyForm>

    </LinearLayout>

</ScrollView>
