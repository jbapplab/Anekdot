<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MetaFirstActivity"
    tools:showIn="@layout/activity_meta_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.emmasuzuki.easyform.EasyForm
        android:id="@+id/meta_first_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:submitButton="@+id/go_to_events_second_button"
        app:showErrorOn="unfocus"
        android:layout_below="@id/categorySpinner">

        <com.emmasuzuki.easyform.EasyTextInputLayout
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="8dp"
            android:hint="@string/username"
            app:errorMessage="@string/error_message_empty"
            app:errorType="empty"/>

        <com.emmasuzuki.easyform.EasyTextInputLayout
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etUsername"
            android:layout_marginTop="8dp"
            android:hint="@string/email"
            app:errorMessage="@string/error_message_email"
            app:errorType="pattern"
            app:regexPattern="[a-zA-Z0-9._-]+@[a-z]+\\.+[a-z]+"/>

        <com.emmasuzuki.easyform.EasyTextInputLayout
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etEmail"
            android:layout_marginTop="8dp"
            android:hint="@string/password"
            app:errorMessage="@string/error_message_password"
            app:errorType="pattern"
            app:regexPattern="[a-zA-Z0-9]{6,12}" />

        <com.emmasuzuki.easyform.EasyTextInputLayout
            android:id="@+id/etPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etPassword"
            android:layout_marginTop="8dp"
            android:hint="@string/confirm_password"
            app:errorMessage="@string/error_message_password"
            app:errorType="pattern"
            app:regexPattern="[a-zA-Z0-9]{6,12}" />

        <Button
            android:id="@+id/bGoToEventsSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:text="Now think of what happens in the story"
            android:textColor="@android:color/white"/>

    </com.emmasuzuki.easyform.EasyForm>

</RelativeLayout>