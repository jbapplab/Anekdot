<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.jbapplab.navigationdrawertabs.MetaFirstActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/uniquetest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvWelcomeMessageMetaFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/it_is_time_to_create_a_story_lets_think_of_the_intended_audience_first"/>

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/to_begin_with_select_the_topic_in_which_your_story_fits_this_will_give_you_some_specific_suggestions_later_on"/>

        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvStage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/now_briefly_think_of_the_problem_or_issue_your_story_is_based_on_in_which_stage_is_your_intended_audience_in_regard_to_the_issue"/>

        <Spinner
            android:id="@+id/stageSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"/>

        <TextView
            android:id="@+id/tvSwipeRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/according_to_your_selections_so_far_tailored_suggestions_have_been_generated_for_you_you_can_swipe_right_and_get_extra_information_on_how_to_make_your_story_more_persuasive_in_terms_of_the_topic_and_stage_that_your_audience_is_in"/>

        <com.emmasuzuki.easyform.EasyForm
            android:id="@+id/meta_first_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:showErrorOn="unfocus">

            <TextView
                android:id="@+id/tvStageRelated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/meta_first_form"
                android:text="@string/think_about_the_your_audience_in_relation_to_the_story_how_can_you_make_the_story_more_specific_to_them_swipe_right_for_more_tips"/>

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/stageRelated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStageRelated"
                android:layout_marginTop="8dp"
                android:hint="@string/what_is_your_goal_with_this_story_what_do_you_want_your_audience_to_do"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/contextRelated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stageRelated"
                android:layout_marginTop="8dp"
                android:hint="@string/think_about_the_environment_of_your_story_the_time_setting_actors_are_they_relatable_to_your_intended_audience_swipe_right_for_more_tips"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/storyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contextRelated"
                android:layout_marginTop="8dp"
                android:hint="@string/give_the_title_of_your_story"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/ifOtherSpecify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/storyTitle"
                android:layout_marginTop="8dp"
                android:hint="@string/if_other_was_selected_please_give_a_suggested_category_or_give_an_extra_keyword_for_your_topic" />

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/storyDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ifOtherSpecify"
                android:layout_marginTop="8dp"
                android:hint="@string/give_a_short_description_for_your_story"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/orientation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/storyDescription"
                android:layout_marginTop="8dp"
                android:hint="@string/set_the_setting_or_context_of_your_story"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/complicatedAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/orientation"
                android:layout_marginTop="8dp"
                android:hint="@string/describe_an_issue_or_problem_what_happens_in_the_story"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/evaluation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/complicatedAction"
                android:layout_marginTop="8dp"
                android:hint="@string/explain_why_this_is_important_exciting_or_the_reason_for_sharing_it"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/resolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/evaluation"
                android:layout_marginTop="8dp"
                android:hint="@string/describe_what_happened_in_the_end_was_there_something_unexpected"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/messgage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/resolution"
                android:layout_marginTop="8dp"
                android:hint="@string/leave_your_audience_with_the_meaning_or_significance_of_what_happened_how_did_this_experience_change_the_actors"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>


            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/imageUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/messgage"
                android:layout_marginTop="8dp"
                android:hint="@string/enter_a_url_of_a_photo_that_represents_your_story"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:inputType="textMultiLine"/>

            <Button
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:id="@+id/addButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageUrl"
                android:layout_marginTop="20dp"
                android:background="@color/colorAccent"
                android:text="@string/save_story"
                android:textColor="@android:color/white"
                android:enabled="false"
                android:alpha="0"/>

            <Button
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:id="@+id/updateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageUrl"
                android:layout_marginTop="20dp"
                android:text="@string/update_story"
                android:textColor="@android:color/white"
                android:enabled="false"
                android:alpha="0"/>

        </com.emmasuzuki.easyform.EasyForm>

    </LinearLayout>

</ScrollView>
