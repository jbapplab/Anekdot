                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="30sp"
                android:gravity="center"
                android:id="@+id/topicInfoDefault"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorAccent"
                android:text="Default Topic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="Here are some default information about the topic. Something was not properly selected, please go back and select a stage in the relevant spinner."
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/topicInfoDefault"/>

